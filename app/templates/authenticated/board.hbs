{{#if @model}}
  {{page-title this.pageTitle}}
  <Nav::Routes::Board @board={{@model.board}} />

  {{#each this.threads as |thread|}}
    <Board::Thread
      @thread={{thread}}
      @isFinalElement={{is-final-element thread this.threads}}
    />
    {{#if (is-final-element thread this.threads)}}
      <Misc::UpdateScrollPosition />
    {{/if}}
  {{/each}}
{{else}}
  {{page-title '404'}}

  <Misc::Error::NotFound />
{{/if}}