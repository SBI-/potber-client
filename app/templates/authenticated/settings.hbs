{{page-title 'Einstellungen'}}

<Nav::Routes::Generic @title='Einstellungen' />

<Common::Container @size='small'>

  <h3>Anzeige</h3>

  <Common::Control::Dropdown
    @options={{this.avatarStyleOptions}}
    @default={{@model.currentAvatarStyleOption}}
    @onSelect={{this.handleAvatarStyleSelect}}
    @size='max'
    @label='Bender'
  />

  <Common::Control::Dropdown
    @options={{this.boxStyleOptions}}
    @default={{@model.currentBoxStyleOption}}
    @onSelect={{this.handleBoxStyleSelect}}
    @size='max'
    @label='Design'
  />

  <h3>Daten & Netzwerk</h3>

  <Common::Control::Dropdown
    @options={{this.autoRefreshSidebarOptions}}
    @default={{@model.currentAutoRefreshSidebarOption}}
    @onSelect={{this.handleAutoRefreshSidebarSelect}}
    @size='max'
    @label='Automatischer Newsfeed-Refresh'
  />

  <h3>Personalisierung</h3>

  <Common::Control::Dropdown
    @options={{this.landingPageOptions}}
    @default={{@model.currentLandingPageOption}}
    @onSelect={{this.handleLandingPageSelect}}
    @size='max'
    @label='Startseite'
  />

  <hr />

  <Common::Control::Link
    @route='applog'
    @size='large'
    @variant='primary'
    class='margin-auto margin-vertical-x-small'
  >
    <FaIcon @icon='rectangle-list' />
    <p class='margin-left-x-small'>Applog</p>
  </Common::Control::Link>

  <Common::Control::Link
    @route='changelog'
    @size='large'
    @variant='primary'
    class='margin-auto margin-vertical-x-small'
  >
    <FaIcon @icon='star' @prefix='fas' />
    <p class='margin-left-x-small'>Changelog</p>
  </Common::Control::Link>

  <Common::Control::Link
    @route='about'
    @size='large'
    @variant='primary'
    class='margin-auto margin-vertical-x-small'
  >
    <FaIcon @icon='info-circle' @prefix='fas' />
    <p class='margin-left-x-small'>Ãœber die App</p>
  </Common::Control::Link>

  <hr />

  <h3>Sitzung</h3>
  <p class='no-margin'>User ID: {{@model.session.userId}}</p>
  <p>Username: {{@model.session.username}}</p>
  <Common::Control::Button
    @text='Abmelden'
    @icon='right-from-bracket'
    @variant='primary'
    @size='large'
    @onClick={{this.handleSignOut}}
  />

</Common::Container>