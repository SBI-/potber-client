{{#if @model.thread}}
  {{page-title this.pageTitle}}

  {{!-- <MainNav::Thread
    @thread={{@model.thread}}
    @currentPage={{@model.currentPage}}
  /> --}}

  <Nav::Routes::Thread @thread={{@model.thread}} @page={{@model.page}} />

  <Board::ThreadPage
    @page={{@model.thread.page}}
    @avatarStyle={{@model.avatarStyle}}
    @subtleUntilPostId={{@model.subtleUntilPostId}}
  />
{{else}}
  {{page-title '404'}}
  <Error::NotFound />
{{/if}}