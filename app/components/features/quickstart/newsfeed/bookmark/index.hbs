<div class='quickstart-item flex-row justify-content-between'>
  <Common::Control::Link
    class='flex-column flex-grow'
    @route='authenticated.thread'
    @query={{hash
      TID=@bookmark.thread.id
      PID=@bookmark.postId
      subtleUntilPostId=@bookmark.postId
      page=undefined
      scrollToBottom=undefined
    }}
    @variant='secondary'
    @onClick={{this.handleLinkClick}}
  >
    <p class='title max-lines-2'> {{@bookmark.thread.title}}</p>
    <p class='subtitle'>{{this.subtitle}}</p>
  </Common::Control::Link>
</div>