<Portal @target='main-nav'>
  <MainNav::Inner::Left>
    <MainNav::Inner::Header
      @title={{@thread.title}}
      @subtitle={{this.subtitle}}
    />
  </MainNav::Inner::Left>
  <MainNav::Inner::Right>
    {{#if this.previousPageVisible}}
      <Common::Control::Link
        @title='Vorherige Seite'
        @size='square'
        @route='thread'
        @query={{hash TID=@thread.id page=this.previousPage}}
      ><FaIcon @icon='chevron-left' /></Common::Control::Link>
    {{/if}}
    {{#if this.nextPageVisible}}
      <Common::Control::Link
        @title='Nächste Seite'
        @size='square'
        @route='thread'
        @query={{hash TID=@thread.id page=this.nextPage}}
      ><FaIcon @icon='chevron-right' /></Common::Control::Link>
    {{/if}}
    <Common::Control::Menu
      @position={{if this.isTopNav 'bottom-left' 'top-left'}}
    >
      <Common::Control::Menu::Link
        @href={{this.originalUrl}}
        @text='Original öffnen'
        target='_blank'
      />
      <Common::Control::Menu::LinkTo
        @text='Zurück zum Board'
        @route='board'
        @query={{hash BID=@thread.boardId}}
      />
    </Common::Control::Menu>
    {{! <Common::Control::Link @title='Antworten' @size='square'><FaIcon
        @route='create-thread'
      /><FaIcon @icon='comment-dots' /></Common::Control::Link> }}
  </MainNav::Inner::Right>
</Portal>