<Portal @target='main-nav'>
  <MainNav::Inner::Left>
    <MainNav::Inner::Header
      @title={{@board.name}}
      @subtitle={{this.subtitle}}
    />
  </MainNav::Inner::Left>
  <MainNav::Inner::Right>
    {{!-- {{#if this.previousPageVisible}}
      <Common::Control::Link
        @title='Vorherige Seite'
        @size='square'
        @route='board'
        @query={{hash BID=@board.id page=this.previousPage}}
      ><FaIcon @icon='chevron-left' /></Common::Control::Link>
    {{/if}}
    {{#if this.nextPageVisible}}
      <Common::Control::Link
        @title='Nächste Seite'
        @size='square'
        @route='board'
        @query={{hash BID=@board.id page=this.nextPage}}
      ><FaIcon @icon='chevron-right' /></Common::Control::Link>
    {{/if}} --}}
    <Common::Control::Menu @position='top-right'>
      <Common::Control::Menu::Button
        @text='Zu Favoriten hinzufügen'
        @onClick={{this.addToFavorites}}
      />
      <Common::Control::Menu::Link
        @href={{this.originalUrl}}
        @text='Original öffnen'
        target='_blank'
      />
    </Common::Control::Menu>
    {{! <Common::Control::Link
      @title='Neuer Thread'
      @size='square'
      @route='create-thread'
    ><FaIcon @icon='square-plus' /></Common::Control::Link> }}
  </MainNav::Inner::Right>
</Portal>