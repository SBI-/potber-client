{{! @glint-nocheck }}
<button
  id='{{this.id}}-button'
  class='menu-button control-size-square control-variant-{{this.variant}}
    icon-size-large'
  title={{this.title}}
  {{on 'click' this.handleClick}}
  {{on 'blur' this.handleBlur}}
>
  <FaIcon @icon={{this.icon}} />
  <menu
    id='{{this.id}}-menu'
    class='menu-{{this.position}}'
    data-visible='false'
  >
    {{yield}}
  </menu>
</button>