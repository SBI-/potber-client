<Common::Control::Link
  class='board-item {{if this.isImportant "board-item-important"}}'
  @route='thread'
  @query={{hash TID=@thread.id page=@thread.pagesCount}}
>
  <div class='board-item-header'>
    <div class='board-item-title'>
      {{#if this.icon}}
        <Board::PostIcon @icon={{this.icon}} />
      {{/if}}
      <p>{{@thread.title}}</p>
    </div>
    <div class='board-item-flags'>
      {{#if @thread.isAnnouncement}}
        <FaIcon @icon='bullhorn' />
      {{/if}}
      {{#if @thread.isImportant}}
        <FaIcon @icon='circle-exclamation' />
      {{/if}}
      {{#if @thread.isSticky}}
        <FaIcon @icon='thumbtack' />
      {{/if}}
      {{#if @thread.isGlobal}}
        <FaIcon @icon='globe' />
      {{/if}}
      {{#if @thread.isClosed}}
        <FaIcon @icon='lock' />
      {{/if}}
    </div>
  </div>
  {{#if @thread.subtitle}}
    <p class='board-item-subtitle subtitle'>{{@thread.subtitle}}</p>
  {{/if}}
</Common::Control::Link>