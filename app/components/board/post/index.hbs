{{! @glint-nocheck }}
<div id={{this.elementId}} class='post {{if @subtle " post-subtle"}}'>
  <div class='post-details'>
    <div class='post-details-title'>
      {{#if this.showSmallAvatar}}
        <Common::Avatar @url={{@post.avatarUrl}} />
      {{/if}}
      <div class='flex-column justify-content-center'>
        <button
          type='button'
          class='post-details-author-name'
          {{on 'click' this.showAuthorProfile}}
        ><b>{{@post.author.name}}</b></button>
        <button
          href={{this.href}}
          type='button'
          class='color-variant-secondary post-details-date justify-content-start'
          {{on 'click' this.copyUrl}}
        >{{this.date}}<FaIcon @icon='link' /></button>
      </div>
    </div>
    {{#unless @isPreview}}
      <Common::Control::Menu @position='auto'>
        <Common::Control::Menu::Link
          @text='Original öffnen'
          @icon='up-right-from-square'
          @href={{this.url}}
          target='_blank'
        />
        <Common::Control::Menu::Button
          @text='Post melden'
          @icon='triangle-exclamation'
          @onClick={{this.report}}
        />
        <Common::Control::Menu::Button
          @text='Lesezeichen setzen'
          @icon='bookmark'
          @onClick={{this.setBookmark}}
        />
        <Common::Control::Menu::Button
          @text='Post speichern'
          @icon='floppy-disk'
          @onClick={{this.savePost}}
        />
        <Common::Control::Menu::LinkTo
          @text='Zitieren'
          @icon='comment-dots'
          @route='authenticated.post.quote'
          @query={{hash
            TID=@post.threadId
            page=@thread.pagesCount
            PID=@post.id
          }}
        />
        {{#if this.canEdit}}
          <Common::Control::Menu::LinkTo
            @text='Bearbeiten'
            @icon='edit'
            @route='authenticated.post.edit'
            @query={{hash TID=@post.threadId PID=@post.id}}
          />
        {{/if}}
      </Common::Control::Menu>
    {{/unless}}
  </div>
  <div class='post-content'>
    {{#if @post.contentHidden}}
      <p class='subtitle no-margin'>⚠ Inhalt versteckt</p>
    {{else}}
      {{#if (or @post.title @post.icon)}}
        <p class='title post-title'>
          <Board::Icon
            @key={{@post.icon}}
            @directory='post-icons'
            @filename='{{@post.icon}}.gif'
          />
          {{@post.title}}
        </p>
      {{/if}}
      <p class='post-content-message'>
        {{this.message}}
      </p>
    {{/if}}
    {{#if @post.lastEdit}}
      <p class='post-content-footer subtitle'>
        {{this.editingInfo}}
      </p>
    {{/if}}
  </div>
</div>