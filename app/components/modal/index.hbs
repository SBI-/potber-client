{{! template-lint-disable no-invalid-interactive }}
<dialog
  id='modal'
  {{on 'cancel' this.handleModalCancel}}
  {{on 'click' this.handleModalClick}}
>
  {{#if this.activeModal.type}}
    {{component
      (concat 'modal/types/' this.activeModal.type)
      options=this.activeModal.options
    }}
  {{/if}}
</dialog>